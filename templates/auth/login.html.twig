{% extends 'auth.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div id="content" class="flex">
        <div class="">
            <div class="page-content page-container" id="page-content">
                <div class="padding">
                    <div class="row">
                        <div class="col-md-6 col-lg-4">
                            <div class="card">
                                <div class="card-header"><strong class="display-6">Login</strong></div>
                                <div class="card-body">
                                    <form method="post">
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'auth') }}</div>
                                        {% endif %}

{#                                        {% if app.user %}#}
{#                                            <div class="mb-3">#}
{#                                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>#}
{#                                            </div>#}
{#                                        {% endif %}#}
                                        <div class="form-group">
                                            <label class="text-muted" for="inputEmail">Email address</label>
                                            <input type="email" name="email" value="{{ last_username }}" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Enter email" autocomplete="email" required autofocus>
                                        </div>
                                        <div class="form-group">
                                            <label class="text-muted" for="inputPassword">Password</label>
                                            <input type="password" name="password" class="form-control" id="inputPassword" placeholder="***" autocomplete="current-password" required>
                                        </div>
{#                                        <div class="form-group">#}
{#                                            <div class="form-check"><input type="checkbox" name="_remember_me" class="form-check-input"><label class="form-check-label">Remember Me</label></div>#}
{#                                        </div>#}
                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}"
                                        >
                                        <div class="row">
                                            <div class="col-6"><button type="submit" class="btn btn-lg btn-primary" style="width: 100%">Login</button></div>
                                            <div class="col-6"><a class="btn btn-lg btn-outline-secondary" href="{{ path('app_register') }}" style="width: 100%">Register</a></div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
