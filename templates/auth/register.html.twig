{% extends 'auth.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div id="content" class="flex">
        <div class="">
            <div class="page-content page-container" id="page-content">
                <div class="padding">
                    <div class="row">
                        <div class="col-md-6 col-lg-4">
                            <div class="card">
                                <div class="card-header"><strong class="display-6">Register</strong></div>
                                <div class="card-body">
                                    {{ form_start(registrationForm) }}
                                        {% for flash_error in app.flashes('verify_email_error') %}
                                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                        {% endfor %}

{#                                        {% if app.user %}#}
{#                                            <div class="mb-3">#}
{#                                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>#}
{#                                            </div>#}
{#                                        {% endif %}#}
                                        <div class="form-group">
                                            <label class="text-muted" for="registration_form_email">Email address</label>
                                            {{ form_widget(registrationForm.email, { attr: { class:'form-control' } }) }}
                                        </div>
                                        <div class="form-group">
                                            <label class="text-muted" for="registration_form_plainPassword">Password</label>
                                            {{ form_widget(registrationForm.plainPassword, {
                                                attr: {
                                                    class: 'form-control',
                                                    placeholder: '***'
                                                }
                                            }) }}
                                        </div>
{#                                    <div class="d-none">#}
{#                                        {{ form_row(registrationForm.agreeTerms) }}#}
{#                                    </div>#}
                                    <div class="row">
                                        <div class="col-6"><button type="submit" class="btn btn-lg btn-primary" style="width: 100%">Register</button></div>
                                        <div class="col-6"><a class="btn btn-lg btn-outline-secondary" href="{{ path('app_login') }}" style="width: 100%">Login</a></div>
                                    </div>
                                    {{ form_end(registrationForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
